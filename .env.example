# GitHub API Configuration
# Get your token at: https://github.com/settings/tokens
# Needed for commit tracking API endpoint
GITHUB_TOKEN=your_github_personal_access_token_here

# Node Environment (automatically set by Next.js)
# NODE_ENV=development

# Application URL (automatically determined in production)
# Used for API calls and redirects
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Database Configuration
# For development, you can use SQLite
PRISMA_DATABASE_URL="file:./prisma/dev.db"
# For production, use a proper database like PostgreSQL

# Clerk Configuration
# Get these from your Clerk Dashboard at https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Stripe Configuration
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_your_pro_monthly_price_id
STRIPE_PRO_YEARLY_PRICE_ID=price_your_pro_yearly_price_id
STRIPE_TEAM_MONTHLY_PRICE_ID=price_your_team_monthly_price_id
STRIPE_TEAM_YEARLY_PRICE_ID=price_your_team_yearly_price_id


# For development, you should use test keys:
# STRIPE_SECRET_KEY=sk_test_your_test_secret_key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key

# You'll also need to create test price IDs in your Stripe test dashboard:
# STRIPE_PRO_MONTHLY_PRICE_ID=price_test_your_test_price_id
# etc.
